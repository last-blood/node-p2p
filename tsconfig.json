{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,

    "baseUrl": "./src",
    "paths": {
      "@common/*": ["common/*"],
      "@peer/*": ["peer/*"],
      "@tracker/*": ["tracker/*"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
